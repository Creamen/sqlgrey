depend() {
	use logger
	before mta
}

start() {
	ebegin "Starting SQLgrey"
	# SQLite put files in the working directory
	cd ~sqlgrey
	sqlgrey -d
	eend
}

stop() {
	ebegin "Shutting down SQLgrey"
	sqlgrey -k
	eend
}
